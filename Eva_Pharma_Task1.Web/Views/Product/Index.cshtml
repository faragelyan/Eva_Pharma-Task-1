@model List<Eva_Pharma_Task1.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1 class="mb-4 text-primary fw-bold text-center">
    <i class="bi bi-box-seam"></i> Product List
</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No products found.
    </div>
}
else
{
    <table class="table table-striped table-bordered shadow">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Title</td>
                    <td>@product.Description</td>
                    <td>@product.Author</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.category?.catName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
