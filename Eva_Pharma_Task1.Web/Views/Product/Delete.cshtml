@model Eva_Pharma_Task1.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger mb-4">
    <i class="bi bi-trash3-fill"></i> Delete Product
</h1>

<h3 class="text-warning">Are you sure you want to delete this product?</h3>

<div class="border rounded p-4 shadow mb-4 bg-light">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3 fw-bold">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3 fw-bold">Author</dt>
        <dd class="col-sm-9">@Model.Author</dd>

        <dt class="col-sm-3 fw-bold">Price</dt>
        <dd class="col-sm-9">@Model.Price</dd>

        <dt class="col-sm-3 fw-bold">Category</dt>
        <dd class="col-sm-9">@Model.category?.catName</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
