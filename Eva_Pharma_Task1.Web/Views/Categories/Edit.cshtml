@model Eva_Pharma_Task1.Models.Categories

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <h1 class="text-warning fw-bold text-center mb-4">
                <i class="bi bi-pencil-square me-2 text-primary"></i> Edit Category
            </h1>

            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-warning bg-opacity-10 text-warning fw-semibold">
                    <i class="bi bi-info-circle-fill me-1"></i> Update the category information
                </div>

                <div class="card-body bg-light">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="catName" class="form-label text-primary fw-semibold">
                                <i class="bi bi-tag-fill me-1"></i> Name
                            </label>
                            <input asp-for="catName" class="form-control border-primary-subtle shadow-sm" />
                            <span asp-validation-for="catName" class="text-danger small"></span>
                        </div>

                        <!-- Order -->
                        <div class="mb-3">
                            <label asp-for="catOrder" class="form-label text-primary fw-semibold">
                                <i class="bi bi-list-ol me-1"></i> Order
                            </label>
                            <input asp-for="catOrder" class="form-control border-info-subtle shadow-sm" />
                            <span asp-validation-for="catOrder" class="text-danger small"></span>
                        </div>

                        <!-- Created Date -->
                        <div class="mb-3">
                            <label asp-for="createdDate" class="form-label text-primary fw-semibold">
                                <i class="bi bi-calendar-event me-1"></i> Created Date
                            </label>
                            <input asp-for="createdDate" class="form-control border-success-subtle shadow-sm" type="datetime-local" />
                            <span asp-validation-for="createdDate" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-dark">
                                <i class="bi bi-arrow-left-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning px-4 text-white">
                                <i class="bi bi-check2-square"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
