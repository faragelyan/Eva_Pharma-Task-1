@model Eva_Pharma_Task1.Models.Categories

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Delete Category</h1>

<h3 class="text-warning">Are you sure you want to delete this?</h3>

<div class="border p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.catName</dd>

        <dt class="col-sm-2">Order</dt>
        <dd class="col-sm-10">@Model.catOrder</dd>

        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.createdDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Marked Deleted</dt>
        <dd class="col-sm-10">@Model.markedAsDeleted</dd>
    </dl>
</div>

<form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
