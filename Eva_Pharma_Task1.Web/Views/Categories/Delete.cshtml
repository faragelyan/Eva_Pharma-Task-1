@model Eva_Pharma_Task1.Models.Categories

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Title & Warning -->
            <div class="text-center mb-4">
                <h1 class="text-danger fw-bold">
                    <i class="bi bi-exclamation-triangle-fill me-2 text-danger"></i>
                    Delete Category
                </h1>
                <h5 class="text-warning">
                    <i class="bi bi-question-circle me-1 text-warning"></i>
                    Are you sure you want to permanently delete this category?
                </h5>
            </div>

            <!-- Category Info Card -->
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-danger bg-opacity-10 fw-semibold text-danger">
                    <i class="bi bi-info-circle-fill me-1"></i> Category Details
                </div>
                <div class="card-body bg-light">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Name:</dt>
                        <dd class="col-sm-8 text-dark">@Model.catName</dd>

                        <dt class="col-sm-4 text-secondary">Order:</dt>
                        <dd class="col-sm-8 text-dark">@Model.catOrder</dd>

                        <dt class="col-sm-4 text-secondary">Created Date:</dt>
                        <dd class="col-sm-8 text-dark">
                            @Model.createdDate.ToString("dd MMM yyyy | hh:mm tt")
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Action Buttons -->
            <form asp-controller="Categories" asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-dark">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill"></i> Delete
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
