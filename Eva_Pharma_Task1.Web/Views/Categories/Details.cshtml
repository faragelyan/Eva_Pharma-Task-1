@model Eva_Pharma_Task1.Models.Categories

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1 class="mb-4 text-info fw-bold">
                <i class="bi bi-card-list me-2 text-primary"></i> Category Details
            </h1>

            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-gradient bg-info bg-opacity-25 text-dark fw-semibold">
                    <i class="bi bi-info-circle-fill me-1 text-primary"></i> Overview
                </div>
                <div class="card-body bg-light">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">ID:</dt>
                        <dd class="col-sm-8 text-dark">@Model.Id</dd>

                        <dt class="col-sm-4 text-secondary">Name:</dt>
                        <dd class="col-sm-8 text-dark">@Model.catName</dd>

                        <dt class="col-sm-4 text-secondary">Order:</dt>
                        <dd class="col-sm-8 text-dark">@Model.catOrder</dd>

                        <dt class="col-sm-4 text-secondary">Created Date:</dt>
                        <dd class="col-sm-8 text-dark">
                            @Model.createdDate.ToString("dd MMM yyyy | hh:mm tt")
                        </dd>

                        <dt class="col-sm-4 text-secondary">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.markedAsDeleted)
                            {
                                <span class="badge bg-danger bg-opacity-75">Deleted</span>
                            }
                            else
                            {
                                <span class="badge bg-success bg-opacity-75">Active</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary px-4">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-dark px-4">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>

        </div>
    </div>
</div>
